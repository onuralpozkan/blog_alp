extends ../layout

block content
        include ../includes/header
        .container
            .row
                .col-lg-8.col-md-10.mx-auto
                    p Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!
                    form(action="/users/register",method="POST",enctype="multipart/form-data")
                        .control-group
                            .form-group.floating-label-form-group.controls
                                label Username
                                input(type="text",class="form-control",placeholder="Username",id="username", name="username")
                                if errors[0]
                                    li.list-group-item.list-group-item-danger= errors[0]
                        .control-group
                            .form-group.floating-label-form-group.controls
                                label E-Mail
                                input(type="email",class="form-control",placeholder="E-Mail",id="email", name="email")
                                if errors[1]
                                    li.list-group-item.list-group-item-danger= errors[1]
                        .control-group
                            .form-group.floating-label-form-group.controls
                                label Password
                                input(type="password",class="form-control",placeholder="Password",id="password", name="password")
                                if errors[2]
                                    li.list-group-item.list-group-item-danger= errors[2]
                        .control-group
                            .form-group.floating-label-form-group.controls
                                label Profile Photo
                                input(type="file",class="form-control",placeholder="Profile Photo",id="pphoto", name="pphoto")
                                if errors[3]
                                    li.list-group-item.list-group-item-danger= errors[3]
                        br
                        button(type="submit",class="btn btn-primary", id="sendMessageButton") Submit
                        hr
        include ../includes/scripts